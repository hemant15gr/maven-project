pipeline {
    agent any


    stages {
        stage('SCM Checkout'){
          git 'https://github.com/hemant15gr/maven-project'
        }
  }
    {
        stage ('Compile Stage') {

            steps {
                withMaven(maven : 'localmaven') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing Stage') {

            steps {
                withMaven(maven : 'localmaven') {
                    sh 'mvn test'
                }
            }
        }


        stage ('Package Stage') {
            steps {
                withMaven(maven : 'localmaven') {
                    sh 'mvn package'
                }
            }
        }
        stage("build & SonarQube analysis") {
           steps {
              withSonarQubeEnv('sonarqubeserver') {
                sh 'mvn clean package sonar:sonar'
              }
            }
          }
    stage("build & SonarQube analysis") {
           steps {
              withSonarQubeEnv('sonarqubeserver') {
                sh 'mvn clean package sonar:sonar'
              }
            }
          }
          stage('bulild and sonarcube analysis'){
          steps{
              withSonarQubeEnv(sonarqubeserver){
              withmaven (maven:'localmaven'){
              sh 'mvn clean package sonar:sonar'
                  }
              }
            }
         }
    }
    }
